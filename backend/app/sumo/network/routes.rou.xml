<?xml version="1.0" encoding="UTF-8"?>
<!-- Vehicle routes for traffic simulation -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle Types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5.0" minGap="2.5" maxSpeed="50.0" guiShape="passenger"/>
    <vType id="bus" accel="1.2" decel="3.0" sigma="0.5" length="12.0" minGap="3.0" maxSpeed="30.0" guiShape="bus"/>
    <vType id="truck" accel="1.0" decel="3.5" sigma="0.5" length="8.0" minGap="3.0" maxSpeed="40.0" guiShape="truck"/>

    <!-- Routes -->
    <!-- North to South -->
    <route id="route_n_s" edges="north_in south_out"/>
    <!-- South to North -->
    <route id="route_s_n" edges="south_in north_out"/>
    <!-- East to West -->
    <route id="route_e_w" edges="east_in west_out"/>
    <!-- West to East -->
    <route id="route_w_e" edges="west_in east_out"/>

    <!-- Traffic Flows (vehicles per hour) -->
    <!-- Peak hour traffic: 900 vehicles/hour = 0.25 vehicles/second -->
    
    <!-- North-South Flow -->
    <flow id="flow_n_s_car" type="car" route="route_n_s" begin="0" end="3600" probability="0.15" departLane="best" departSpeed="max"/>
    <flow id="flow_n_s_bus" type="bus" route="route_n_s" begin="0" end="3600" probability="0.02" departLane="best" departSpeed="max"/>
    
    <!-- South-North Flow -->
    <flow id="flow_s_n_car" type="car" route="route_s_n" begin="0" end="3600" probability="0.15" departLane="best" departSpeed="max"/>
    <flow id="flow_s_n_truck" type="truck" route="route_s_n" begin="0" end="3600" probability="0.03" departLane="best" departSpeed="max"/>
    
    <!-- East-West Flow -->
    <flow id="flow_e_w_car" type="car" route="route_e_w" begin="0" end="3600" probability="0.12" departLane="best" departSpeed="max"/>
    <flow id="flow_e_w_bus" type="bus" route="route_e_w" begin="0" end="3600" probability="0.02" departLane="best" departSpeed="max"/>
    
    <!-- West-East Flow -->
    <flow id="flow_w_e_car" type="car" route="route_w_e" begin="0" end="3600" probability="0.12" departLane="best" departSpeed="max"/>
    <flow id="flow_w_e_truck" type="truck" route="route_w_e" begin="0" end="3600" probability="0.02" departLane="best" departSpeed="max"/>

    <!-- Additional random traffic for realism -->
    <flow id="flow_random_1" type="car" route="route_n_s" begin="300" end="3600" probability="0.08" departLane="best" departSpeed="random"/>
    <flow id="flow_random_2" type="car" route="route_e_w" begin="600" end="3600" probability="0.08" departLane="best" departSpeed="random"/>
    <flow id="flow_random_3" type="car" route="route_s_n" begin="900" end="3600" probability="0.08" departLane="best" departSpeed="random"/>
    <flow id="flow_random_4" type="car" route="route_w_e" begin="1200" end="3600" probability="0.08" departLane="best" departSpeed="random"/>

</routes>
